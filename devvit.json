{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "spottit-react2",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "inline": true,
        "height": "tall"
      },
      "spotMarking": {
        "entry": "index.html",
        "height": "tall"
      }
    }
  },

  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },

  "forms": {
    "createGamePost": "/internal/form/create-game-post"
  },
  "menu": {
    "items": [
      {
        "label": "Create a Spottit Post",
        "description": "Create a new Spottit puzzle game",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/create-game"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "spottit_react2_dev"
  }
}
